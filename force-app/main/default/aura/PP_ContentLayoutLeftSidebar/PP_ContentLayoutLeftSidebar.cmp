<aura:component implements="forceCommunity:layout" description="2 Column Layout (Left Sidebar, Content)" access="global">
    <aura:attribute name="column1" type="Aura.Component[]" required="false"></aura:attribute>
    <aura:attribute name="column2" type="Aura.Component[]" required="false"></aura:attribute>
    <aura:attribute name="column3" type="Aura.Component[]" required="false"></aura:attribute>
    
    <div class="slds-grid slds-wrap slds-gutters_direct theme-container">
        <div class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_3-of-12 col col-1">
             {!v.column1}
        </div>
        <div class="slds-col slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_9-of-12 col col-2">
             {!v.column2}
        </div>
    </div>
</aura:component>