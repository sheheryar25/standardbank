<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId">

    <aura:attribute name="comp1Name" type="String" />
    <aura:attribute name="comp2Name" type="String" />
    <aura:attribute name="comp3Name" type="String" />
    <aura:attribute name="comp4Name" type="String" />
    <aura:attribute name="recordId" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <div aura:id="comp_container_main" class="slds-grid slds-grid_pull-padded">
        <aura:if isTrue="{!v.comp1Name}">
            <div class="slds-p-horizontal_xx-small slds-col">
                <c:StdBank_Ltn_Loading />
            </div>
        </aura:if>
        <aura:if isTrue="{!v.comp2Name}">
            <div class="slds-p-horizontal_xx-small slds-col">
                <c:StdBank_Ltn_Loading />
            </div>
        </aura:if>
        <aura:if isTrue="{!v.comp3Name}">
            <div class="slds-p-horizontal_xx-small slds-col">
                <c:StdBank_Ltn_Loading />
            </div>
        </aura:if>
        <aura:if isTrue="{!v.comp4Name}">
            <div class="slds-p-horizontal_xx-small slds-col">
                <c:StdBank_Ltn_Loading />
            </div>
        </aura:if>
    </div>
</aura:component>