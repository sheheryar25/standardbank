<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Number_of_Days_to_Close__c</fullName>
    <description>Count number of days for the opportunity to close.</description>
    <externalId>false</externalId>
    <formula>IF(IsClosed, FLOOR( Actual_Close_Date__c - DATEVALUE( CreatedDate )), 0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Count number of days for the opportunity to close.</inlineHelpText>
    <label>Number of Days to Close</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
