<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Statement_date_cannot_be_future_year</fullName>
    <active>true</active>
    <errorConditionFormula>Statement_Date__c  &gt; TODAY()</errorConditionFormula>
    <errorDisplayField>Statement_Date__c</errorDisplayField>
    <errorMessage>The statement date cannot be in the future, please enter a date on or before today</errorMessage>
</ValidationRule>
