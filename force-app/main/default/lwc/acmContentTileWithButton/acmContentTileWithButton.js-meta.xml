<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>ACM Content Tile with Button</masterLabel>
    <description>A tile shape with stylised icon and title with subtext below and a button</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    

    <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
     <property type="String" name="ACMHelperimage" label="Add image path" default="/sbg-orange-helper.svg" />
     <property type="String" name="supportText" label="Add Header text " default="We're always here to help" />
     <property type="String" name="subHeaderText" label="Add Sub Header text " default="for support or feedback please email us: " />
     <property type="String" name="emailId" label="Add Email address " default="SBAPIMarketplace@standardbank.co.za" />
     <property type="String" name="buttonLabel" label="Button Label " default="Send Email" />
     <property type="String" name="weekdayHours" label="Weekday Bussiness Hours " default="	8:00 - 17:00" />
     <property type="String" name="weekendHours" label="Weekend Bussiness Hours " default="	8:00 - 13:00" />
      
    </targetConfig>
  </targetConfigs>

</LightningComponentBundle>